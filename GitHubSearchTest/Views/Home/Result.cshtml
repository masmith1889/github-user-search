@model GitHubSearchTest.Models.GitHubUserContent

@{
    ViewBag.Title = "GitHub User Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.name (@Model.login)</h2>

<p><strong>Location:</strong> @Model.location</p>
<img src="@Model.avatar_url" alt="Avatar" width="150" style="border-radius: 8px;" />
<p class="mt-3">
    <a href="@Url.Action("Index", "Home")">← Back to Search</a>
</p>

<h3>Top 5 Repositories</h3>

@if (Model.UserRepositories == null || !Model.UserRepositories.Any())
{
    <p>No repositories found.</p>
}
else
{
    <table class="table table-bordered">
        <thead  class="table-dark">
            <tr>
                <th>Repository</th>
                <th>Description</th>
                <th>Star Gazers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var repo in Model.UserRepositories)
            {
                <tr>
                    <td>
                        <a href="@repo.html_url" target="_blank">@repo.name</a>
                    </td>
                    <td>@repo.description</td>
                    <td>@repo.stargazers_count</td>
                </tr>
            }
        </tbody>
    </table>
}
